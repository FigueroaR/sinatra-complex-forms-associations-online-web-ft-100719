<h1>Update Pet</h1>

<h2>Edits for <%= @pets.name %></h2>
 
  <form action="/pets/<%= @pets.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pets.name %>">
 
    <br>
    <p>Select an existing Owner or create a new one below.</p>
 
    <h3>Existing Owners</h3>
    <% @owners.each do |o| %>
      <input type="radio" name="pet[owner_id]" id="<%= o.id %>" value="<%= o.id %>" <%='checked' if Pet.all.include?(o) %>><%= o.name %></input><br>
    <% end %>
    <br>
    
 
    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name">
    <br><br>
 
    <input type="submit" value="Update Pet">
  </form>

